<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nibesh.subdeptapp.Main2Activity">
    <TextView
        style="@style/textstyle"
        android:text="Name:"
        android:id="@+id/lbl_tvName"/>
    <TextView
        style="@style/textstyle"
        android:text="ID:"
        android:id="@+id/lbl_tvID"
        android:layout_below="@id/lbl_tvName"/>
    <TextView
        style="@style/textstyle"
        android:text="Dept:"
        android:id="@+id/lbl_tvDept"
        android:layout_below="@id/lbl_tvID"/>
    <TextView
        style="@style/textstyle"
        android:text="Average:"
        android:id="@+id/lbl_Average"
        android:layout_below="@id/lbl_tvDept"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Submit"
        android:textSize="30dp"
        android:layout_below="@+id/lbl_Average"
        android:layout_toEndOf="@+id/lbl_Average"
        android:layout_marginStart="19dp" />


</RelativeLayout>
